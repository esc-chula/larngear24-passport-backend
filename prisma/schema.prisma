generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    BigInt       @id @unique @default(autoincrement()) @db.BigInt
  username   String       @db.VarChar(255)
  baan       Int          @db.Integer
  email      String       @unique @db.VarChar(255)
  image      String       @default("")
  user_item  User_Item[]
  user_dress User_Dress[]
}

model Item {
  item_id   BigInt      @id @default(autoincrement()) @db.BigInt
  item_name String      @db.VarChar(255)
  user_item User_Item[]
}

model User_Item {
  user_item_id BigInt @id @default(autoincrement()) @db.BigInt
  user_id      BigInt
  item_id      BigInt
  item         Item   @relation(fields: [item_id], references: [item_id])
  user         User   @relation(fields: [user_id], references: [user_id])
}

model Dress {
  dress_id   BigInt       @id @default(autoincrement()) @db.BigInt
  dress_name String
  user_dress User_Dress[]
}

model User_Dress {
  user_dress_id BigInt @id @default(autoincrement()) @db.BigInt
  user_id       BigInt
  dress_id      BigInt
  dress         Dress  @relation(fields: [dress_id], references: [dress_id])
  user          User   @relation(fields: [user_id], references: [user_id])
}

model Session {
  userId    BigInt @unique
  sessionId String @unique
}

model Members {
  lg_number  String
  prefix     String
  first_name String
  last_name  String
  nick_name  String
  school     String
  baan       String
  google_id  String @unique
}
